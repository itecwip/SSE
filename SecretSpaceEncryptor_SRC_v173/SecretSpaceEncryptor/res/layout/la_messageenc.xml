<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/d_black"
	android:id="@+id/ME_rootLayout"
	>
	<LinearLayout
		android:id="@+id/ME_topContainer"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:layout_alignParentTop="true"
		android:layout_marginTop="3dp"
		>
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:layout_weight="0.42"
			android:gravity="center_vertical"
			android:layout_marginBottom="1.5dp"
			>
			<ext.os.misc.AutoResizeTextView
				android:id="@+id/ME_fromClipBoardDecButton"
				android:text="@string/common_paste_text"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				style="@style/ButtonArrowDown"
				android:layout_weight="0.5"
				android:ellipsize="end"
				android:singleLine="true"
				></ext.os.misc.AutoResizeTextView>
			<ext.os.misc.AutoResizeTextView
				android:id="@+id/ME_toClipBoardDecButton"
				android:text="@string/common_copy_text"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				style="@style/ButtonArrowUp"
				android:layout_weight="0.5"
				android:ellipsize="end"
				android:singleLine="true"
				></ext.os.misc.AutoResizeTextView>
		</LinearLayout>
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:layout_weight="0.58"
			android:gravity="center_vertical"
			android:layout_marginBottom="1.5dp"
			>
			<Button
				android:id="@+id/ME_cleanButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/ButtonClean"
			></Button>
			<FrameLayout
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:id="@+id/ME_hiddenFL03"
				android:layout_weight="0.5"
				>
			</FrameLayout>
			<Button
				android:text=""
				android:layout_gravity="top"
				android:id="@+id/ME_fullScreenButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/ButtonFullScreenCropped"
				></Button>
			<Button
				android:text=""
				android:layout_gravity="top"
				android:id="@+id/ME_helpButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/ButtonHelpCropped"
				></Button>
		</LinearLayout>
	</LinearLayout>
	<EditText
		android:text=""
		android:id="@+id/ME_decryptedEditText"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_below="@+id/ME_topContainer"
		android:layout_above="@+id/ME_hiddenFLCenter"
		android:scrollbars="vertical"
		android:gravity="top"
		android:minLines="1"
		android:hint="@string/me_decHint"
		android:textColor="#000"
		></EditText>
	<FrameLayout
		android:layout_height="4.5dp"
		android:layout_width="fill_parent"
		android:id="@+id/ME_hiddenFLCenter"
		android:layout_gravity="center"
		android:layout_centerInParent="true"
		android:gravity="center_vertical"
		>
	</FrameLayout>
	<LinearLayout
		android:id="@+id/ME_centralContainer"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_below="@+id/ME_hiddenFLCenter"
		android:gravity="center_vertical"
		>
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:layout_weight="0.35"
			android:gravity="center_vertical"
			android:layout_marginBottom="1.7dp"
			>
			<ext.os.misc.AutoResizeTextView
				android:text="@string/common_encrypt_text"
				android:id="@+id/ME_encryptButton"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				style="@style/ButtonArrowDownRed"
				android:layout_weight="0.5"
				android:ellipsize="end"
				android:singleLine="true"
				></ext.os.misc.AutoResizeTextView>
			<ext.os.misc.AutoResizeTextView
				android:text="@string/common_decrypt_text"
				android:id="@+id/ME_decryptButton"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				style="@style/ButtonArrowUp"
				android:layout_weight="0.5"
				android:ellipsize="end"
				android:singleLine="true"
				></ext.os.misc.AutoResizeTextView>
		</LinearLayout>
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:layout_weight="0.65"
			android:gravity="center_vertical"
			android:layout_marginBottom="1.7dp"
			>
			<FrameLayout
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:id="@+id/ME_hiddenFL02"
				android:layout_weight="0.9"
				>
			</FrameLayout>
			<Button
				android:text="@string/common_password_text"
				android:id="@+id/ME_passwordButton"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:layout_weight="0.1"
				android:layout_marginLeft="3dp"
				android:layout_marginRight="3dp"
				android:layout_marginTop="0dp"
				android:layout_marginBottom="0dp"
				android:ellipsize="end"
				></Button>
		</LinearLayout>
	</LinearLayout>
	<EditText
		android:id="@+id/ME_encryptedEditText"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_below="@+id/ME_centralContainer"
		android:layout_above="@+id/ME_bottomContainer"
		android:gravity="top"
		android:minHeight="20dp"
		android:inputType="textMultiLine|textNoSuggestions"
		android:text=""
		android:scrollbars="vertical"
		android:hint="@string/me_encHint"
		android:textColor="#000"
		android:layout_margin="0dp"
		></EditText>
	<LinearLayout
		android:id="@+id/ME_bottomContainer"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_alignParentBottom="true"
		android:orientation="vertical"
		>
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:gravity="center_vertical"
			android:layout_marginTop="2.0dp"
			>
			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:layout_weight="0.42"
				android:gravity="center_vertical"
				>
				<ext.os.misc.AutoResizeTextView
					android:id="@+id/ME_toClipBoardEncButton"
					android:text="@string/common_copy_text"
					android:layout_height="wrap_content"
					android:layout_width="fill_parent"
					style="@style/ButtonArrowDownRed"
					android:layout_weight="0.5"
					android:ellipsize="end"
					android:singleLine="true"
					></ext.os.misc.AutoResizeTextView>
				<ext.os.misc.AutoResizeTextView
					android:id="@+id/ME_fromClipBoardEncButton"
					android:text="@string/common_paste_text"
					android:layout_height="wrap_content"
					android:layout_width="fill_parent"
					style="@style/ButtonArrowUpRed"
					android:layout_weight="0.5"
					android:ellipsize="end"
					android:singleLine="true"
					></ext.os.misc.AutoResizeTextView>
			</LinearLayout>
			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:layout_weight="0.58"
				android:gravity="center_vertical"
				>
				<Button
					android:id="@+id/ME_sendTextToAppButton"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:enabled="false"
					style="@style/ButtonSendTextToButtonDisabled"
				></Button>
				<FrameLayout
					android:layout_height="wrap_content"
					android:layout_width="fill_parent"
					android:layout_weight="0.9"
					>
				</FrameLayout>
				<Button
					android:id="@+id/ME_moreOptionsButton"
					android:text=""
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					style="@style/ButtonMore"
					></Button>
			</LinearLayout>			
		</LinearLayout>
		<TextView
			android:layout_marginTop="2dp"
			android:text="..."
			android:id="@+id/ME_statusBarTextView"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			style="@style/TextEncryptorStatusBar"
			></TextView>
	</LinearLayout>
</RelativeLayout>
