<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/PWVL_Root"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>
	<GridView
		android:id="@+id/PWVL_Folders_gridview"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:numColumns="auto_fit"
		android:verticalSpacing="4.0dp"
		android:horizontalSpacing="8.0dp"
		android:columnWidth="90dp"
		android:stretchMode="columnWidth"
		android:gravity="center"
		android:layout_alignParentTop="true"
		android:layout_above="@+id/PWVL_Folders_buttons"
		android:scrollbars="vertical"
		/>
		<Button
			android:id="@+id/PWVL_Folders_showMenuButton"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true"
			android:padding="3dp"
			android:background="@drawable/d_expand_up"
			android:visibility="visible"
			android:paddingRight="1.0dp"
			android:paddingBottom="1.0dp"
			></Button>
		<LinearLayout
			android:id="@+id/PWVL_Folders_buttons"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_alignParentBottom="true"
			android:gravity="center_vertical"
			android:background="@color/grey"
			android:paddingTop="3dp"
			android:paddingBottom="2.5dp"
			android:visibility="gone"
			>
		<Button
			android:text=""
			android:id="@+id/PWVL_helpButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@style/ButtonHelp"
			android:ellipsize="end"
			></Button>
		<Button
			android:id="@+id/PWVL_Folders_newFolderButton"
			android:text="@string/pwv_newFolder_text"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			style="@style/ButtonNewFolder"
			android:layout_weight="1.0"
			android:ellipsize="end"
			></Button>
		<Button
			android:id="@+id/PWVL_Folders_moreButton"
			android:text="@string/common_moreDots_text"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:layout_weight="1.0"
			style="@style/ButtonExpander"
			android:ellipsize="end"
			></Button>
	</LinearLayout>
</RelativeLayout>
