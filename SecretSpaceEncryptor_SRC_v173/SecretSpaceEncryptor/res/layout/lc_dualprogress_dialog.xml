<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:padding="0dp"
	>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="0dp"
		android:layout_alignParentTop="true"
		android:layout_above="@+id/DPBD_buttonWrapper"
		>
		<LinearLayout
			android:id="@+id/DPBD_main"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:paddingTop="7dp"
			>
			<TextView
				android:id="@+id/DPBD_message"
				android:text="Message"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:paddingBottom="14dp"
				style="@android:style/TextAppearance.Medium"
				></TextView>
			<LinearLayout
				android:id="@+id/DPBD_progressBarAContainer"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:paddingBottom="11dp"
				>
				<ProgressBar
					android:id="@+id/DPBD_progressBarA"
					android:progressDrawable="@drawable/d_progressbar_gradient"
					android:layout_width="fill_parent"
					android:layout_height="17dp" 
					style="?android:attr/progressBarStyleHorizontal" 
					android:indeterminateOnly="false" 	
				    ></ProgressBar>
				<TextView
					android:id="@+id/DPBD_progressBarAText"
					android:text="0%"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:singleLine="true"
					android:paddingTop="4dp"
				></TextView>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/DPBD_progressBarBContainer"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:visibility="gone"
				android:layout_marginBottom="7dp"
				>
				<ProgressBar
					android:id="@+id/DPBD_progressBarB"
					android:progressDrawable="@drawable/d_progressbar_gradient"
					android:layout_width="fill_parent"
					android:layout_height="17dp" 
					style="?android:attr/progressBarStyleHorizontal" 
					android:indeterminateOnly="false" 	
				    ></ProgressBar>
				<TextView
					android:id="@+id/DPBD_progressBarBText"
					android:text="0%"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:singleLine="true"
					android:paddingTop="4dp"
				></TextView>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/DPBD_verboseContainer"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:visibility="gone"
				>
				<FrameLayout
					android:background="@color/grey_light"
					android:layout_width="fill_parent"
					android:layout_height="1dp"
					android:layout_marginTop="0dp"
					android:layout_marginBottom="0dp"
				>
				</FrameLayout>
				<ScrollView
					android:id="@+id/DPBD_verboseScroll"
					android:layout_height="wrap_content"
					android:layout_width="fill_parent"
					android:fadeScrollbars="false"
					android:paddingTop="6dp"
					android:paddingBottom="6dp"
					android:paddingLeft="0dp"
					android:paddingRight="0dp"
					android:scrollbarStyle="outsideOverlay"
					>
					<TextView
						android:text=""
						android:id="@+id/DPBD_verbose"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:minLines="5"
						android:paddingRight="5dp"
						></TextView>
				</ScrollView>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/DPBD_buttonWrapper"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@color/dialogButtonsBackground"
		android:gravity="center"
		android:paddingTop="4dp"
		android:layout_alignParentBottom="true"
		android:visibility="gone"
		>
		<Button
			android:id="@+id/DPBD_buttonOK"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="@string/common_ok_text"
			android:minWidth="150dp"
			android:layout_margin="3dp"
			android:enabled="false"
			/>
	</LinearLayout>
</RelativeLayout>
